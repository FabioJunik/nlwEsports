// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id
  title     String
  bannerURL String
  ads       Ad[]
}

model Ad {
  id              String   @id
  gameId          String
  name            String
  yearsPlaying    Int
  discord         String
  weekDays        String
  hourStart       Int
  hourEnd         Int
  useVoiceChannel Boolean
  createdAt       DateTime @default(now())
  game            Game     @relation(fields: [gameId], references: [id])
}
